<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEEED"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Email..."
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_userName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/register_email_et"
        android:hint="Username..."
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/register_userName_et"
        android:hint="Password"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_confirm_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/register_password_et"
        android:hint="Confirm Password"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/register_password_et"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#FBDDDB"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Register"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_button_activityServices"
        android:background="#FBDDDB"
        android:text="@string/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/register_sign_in_button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>