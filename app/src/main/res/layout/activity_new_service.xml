<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEEED"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edit_service_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="New Service"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_service_name_et"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_service_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_service_title_tv"
        android:hint="Service Name:"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_service_start_time_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:inputType="none"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@+id/edit_service_name_et"
        android:hint="Available Start Time:"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_service_end_time_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:inputType="none"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@+id/edit_service_start_time_et"
        android:hint="Available End Time:"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_service_price_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/edit_service_end_time_et"
        android:hint="Price:"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_service_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_service_price_et"
        android:hint="Description:"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_service_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_service_description_et"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#FBDDDB"
        app:layout_constraintBottom_toTopOf="@+id/edit_service_cancel_button"
        android:text="Confirm"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_service_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_service_confirm_button"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#FBDDDB"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/cancel_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>