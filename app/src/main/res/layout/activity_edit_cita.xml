<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEEED"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Appointment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_marginTop="30dp"
        android:text="Appointment"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_appointment_service_et"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_appointment_service_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Appointment_title"
        app:layout_constraintBottom_toTopOf="@+id/edit_appointment_username_et"
        android:text="service name"
        android:textSize="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_appointment_username_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_appointment_service_et"
        app:layout_constraintBottom_toTopOf="@+id/edit_appointment_date_et"
        android:text="user name"
        android:textSize="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_appointment_date_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_appointment_username_et"
        app:layout_constraintBottom_toTopOf="@+id/edit_appointment_time_et"
        android:text="user name"
        android:textSize="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_appointment_time_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_appointment_date_et"
        app:layout_constraintBottom_toTopOf="@+id/Cancel_button_activity_edit_cita"
        android:text="user name"
        android:textSize="30dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Cancel_button_activity_edit_cita"
        android:background="#FBDDDB"
        android:text="Cancel appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_appointment_time_et"
        app:layout_constraintBottom_toTopOf="@+id/Update_button_activity_edit_cita"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Update_button_activity_edit_cita"
        android:background="#FBDDDB"
        android:text="Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Cancel_button_activity_edit_cita"
        app:layout_constraintBottom_toTopOf="@+id/Done_button_activity_edit_cita"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Done_button_activity_edit_cita"
        android:background="#FBDDDB"
        android:text="@string/done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Update_button_activity_edit_cita"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>